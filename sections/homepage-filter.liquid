    position: relative;
    user-select: none;
  }

  .product-option-label {
    position: relative;
    cursor: pointer;
    background-color: white;
/*     font-size: 16px; */
    width: auto;
    text-align: left;
    font-size: 3rem;
    text-transform: uppercase;
    font-weight: 600;
    padding: 0.2rem 0.3rem;
    color: #d22426;
  }

  .add-to-cart-button {
    text-transform: uppercase;
  }

  .add-to-cart-button:hover {
    background-color: black;
    color: white;
  }

  .product-option-list {
    position: absolute;
    bottom: 50px;
    right: 0;
    width: max-content;
    padding: 2rem;
    left: -30px;
/*     background-color: white; */
    background-color: #f6f6f6;
    text-transform: uppercase;
    font-weight: 600;
    font-size: 3rem;
    color: #d22426;
    transition: all 0.4s;
  }

  .product-option-item {
    cursor: pointer;
    padding: 0 1.2rem
  }

  .Facet img {
    transition: all 0.4s;
    margin-left: 5px;
    margin-bottom: 2px;
  }

  .arrowActive {
    transform-origin: 50% 50%;
    transform: rotate(180deg);
  }

  .product-option-item:hover {
    background: #ededed;
  }

    @media (max-width: 420px) {
      .Facet > span {
